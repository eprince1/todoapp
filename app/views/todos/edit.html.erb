<%= form_for @todo do |f| %>

<% if @todo.errors.any? %>

<h2>The form could not submmit because of the following:</h2>

<ul>
  <% @todo.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<% end %>

