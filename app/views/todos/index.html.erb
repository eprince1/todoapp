<h1>Listing all Todos</h1>

<%= link_to "Create new Todo", new_todo_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @todos.each do |todos| %>
    <tr>
      <td><%= todos.name %></td>
      <td><%= todos.description %></td>
      <td><%= link_to "Edit", edit_todo_path(todos) %></td>
      <td><%= link_to "Show", todo_path(todos) %></td>
      <td><%= link_to "Delete", todo_path(todos), method: :delete, data: {confirm: "Are you sure?"} %> </td>
    </tr>
  
  <% end %>
  
</table>